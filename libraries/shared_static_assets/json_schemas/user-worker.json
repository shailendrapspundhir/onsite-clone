{
  "$id": "user.workerProfile",
  "type": "object",
  "required": ["firstName", "lastName", "skills"],
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "dateOfBirth": { "type": "string", "format": "date" },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SECURITY_GUARD", "COOK", "CLEANER", "DRIVER", "RECEPTIONIST", "MAINTENANCE", "OTHER"]
      },
      "minItems": 1
    },
    "experienceYears": { "type": "number", "minimum": 0, "maximum": 70 },
    "bio": { "type": "string", "maxLength": 2000 },
    "location": { "type": "string", "maxLength": 200 },
    "preferredLocations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "certifications": {
      "type": "array",
      "items": { "type": "string" }
    },
    "resumeUrl": { "type": "string", "format": "uri" },
    "avatarUrl": { "type": "string", "format": "uri" }
  },
  "errorMessages": {
    "properties": {
      "firstName": { "minLength": "First name must be at least 2 characters", "maxLength": "First name is too long" },
      "lastName": { "minLength": "Last name must be at least 2 characters", "maxLength": "Last name is too long" },
      "skills": { "minItems": "Select at least one skill" }
    }
  },
  "errorCodes": {
    "properties": {
      "firstName": { "minLength": "AUTH_003", "maxLength": "AUTH_004" },
      "lastName": { "minLength": "AUTH_003", "maxLength": "AUTH_004" },
      "skills": { "minItems": "USER_001" }
    }
  }
}
