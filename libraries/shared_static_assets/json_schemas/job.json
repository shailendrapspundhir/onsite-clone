{
  "$id": "job.create",
  "type": "object",
  "required": ["title", "description", "role", "employmentType", "location"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 10000
    },
    "role": {
      "type": "string",
      "enum": ["SECURITY_GUARD", "COOK", "CLEANER", "DRIVER", "RECEPTIONIST", "MAINTENANCE", "OTHER"]
    },
    "employmentType": {
      "type": "string",
      "enum": ["FULL_TIME", "PART_TIME", "CONTRACT", "TEMPORARY"]
    },
    "location": {
      "type": "string",
      "minLength": 2,
      "maxLength": 200
    },
    "salaryMin": { "type": "number", "minimum": 0 },
    "salaryMax": { "type": "number", "minimum": 0 },
    "salaryCurrency": { "type": "string", "maxLength": 3 },
    "salaryDisplay": { "type": "boolean" },
    "requirements": {
      "type": "array",
      "items": { "type": "string" }
    },
    "benefits": {
      "type": "array",
      "items": { "type": "string" }
    },
    "closesAt": { "type": "string", "format": "date-time" }
  },
  "errorMessages": {
    "properties": {
      "title": { "minLength": "Title must be at least 3 characters", "maxLength": "Title is too long" },
      "description": { "minLength": "Description must be at least 10 characters", "maxLength": "Description is too long" },
      "role": { "enum": "Invalid job role" },
      "employmentType": { "enum": "Invalid employment type" },
      "location": { "minLength": "Location is required", "maxLength": "Location is too long" }
    }
  },
  "errorCodes": {
    "properties": {
      "title": { "minLength": "JOB_001", "maxLength": "AUTH_004" },
      "description": { "minLength": "JOB_001", "maxLength": "AUTH_004" },
      "role": { "enum": "COMMON_002" },
      "employmentType": { "enum": "COMMON_002" },
      "location": { "minLength": "JOB_001", "maxLength": "AUTH_004" }
    }
  }
}
