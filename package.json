{
  "name": "onsite360",
  "version": "1.0.0",
  "private": true,
  "description": "Modular microservices backend for OnSite360 platform",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "pnpm build:packages && pnpm --filter './core/*' --filter './web_apps/*' run build",
    "build:packages": "pnpm --filter @onsite360/types build && pnpm --filter @onsite360/common build && pnpm --filter @onsite360/schemas build && pnpm --filter @onsite360/ui-shared build && pnpm --filter @onsite360/web-ui-shared build && pnpm --filter @onsite360/mobile-ui-shared build",
    "build:auth": "pnpm --filter auth-service build",
    "build:user": "pnpm --filter user-management-service build",
    "build:job": "pnpm --filter job-service build",
    "dev:auth": "pnpm --filter auth-service dev",
    "dev:user": "pnpm --filter user-management-service dev",
    "dev:job": "pnpm --filter job-service dev",
    "dev:all": "concurrently -n auth,user,job -c blue,green,magenta \"pnpm dev:auth\" \"pnpm dev:user\" \"pnpm dev:job\"",
    "dev:admin": "pnpm --filter admin-dashboard dev",
    "dev:worker": "pnpm --filter worker-app dev",
    "dev:employer": "pnpm --filter employer-app dev",
    "dev:web": "concurrently -n admin,worker,employer -c cyan,yellow,magenta \"pnpm dev:admin\" \"pnpm dev:worker\" \"pnpm dev:employer\"",
    "prod:core": "pnpm --filter './core/*' run start:prod",
    "prod:web": "pnpm --filter './web_apps/*' run start",
    "prod": "concurrently -n core,web -c blue,green \"pnpm prod:core\" \"pnpm prod:web\"",
    "seed": "node scripts/seed/run.mjs",
    "mobile:setup": "pnpm --filter mobile-app run setup",
    "mobile:setup_android_emulator": "pnpm --filter mobile-app run setup_android_emulator",
    "mobile:run_android": "pnpm --filter mobile-app run run_android",
    "mobile:run_ios": "pnpm --filter mobile-app run run_ios",
    "mobile:build_apk": "pnpm --filter mobile-app run build_apk",
    "start-android-emulator": "sh ./scripts/start-android-emulator.sh",
    "android": "pnpm --filter mobile-app run run_android",
    "codegen:mobile": "pnpm -w exec graphql-codegen --config apps/mobile-app/codegen.yml",
    "ci": "pnpm install && pnpm codegen:mobile && pnpm test && pnpm build",
    "test": "pnpm -r run test",
    "test:unit": "pnpm -r run test:unit",
    "test:e2e": "pnpm -r run test:e2e",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "start:all": "sh ./scripts/start-all/start-all.sh",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-graphql-request": "^6.4.0",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.7",
    "concurrently": "^9.2.1",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@onsite360/types": "workspace:*",
    "@onsite360/common": "workspace:*",
    "@onsite360/schemas": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1"
  }
}
